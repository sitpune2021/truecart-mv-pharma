# Application
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=truecart_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Bcrypt
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# Session
MAX_CONCURRENT_SESSIONS=3

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads

# Redis (Optional for development, required for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Razorpay
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Firebase Cloud Messaging
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=TrueCart <noreply@truecart.com>

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Order Assignment
ORDER_ASSIGNMENT_TIMEOUT_MINUTES=30
MAX_VENDOR_DISTANCE_KM=3
MAX_VENDORS_TO_TRY=5

# Commission
DEFAULT_COMMISSION_PERCENTAGE=10
PAYMENT_GATEWAY_FEE_PERCENTAGE=2
PLATFORM_SERVICE_FEE=5
DELIVERY_COMMISSION_PERCENTAGE=15

# Delivery
DEFAULT_DELIVERY_CHARGE=30
FREE_DELIVERY_THRESHOLD=500

# Stock Allocation
DEFAULT_ONLINE_STOCK_PERCENTAGE=60
DEFAULT_OFFLINE_STOCK_PERCENTAGE=40

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
ENABLE_CSRF=true
ENABLE_HELMET=true
ENABLE_CORS=true

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
ENABLE_CRON_JOBS=true

# Development
DEBUG=true
MOCK_PAYMENT_GATEWAY=false
MOCK_SMS_SERVICE=false
MOCK_EMAIL_SERVICE=false
